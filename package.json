    "@typescript-eslint/parser": "^8.26.1",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.28.0",
    "eslint-plugin-github": "^5.1.8",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "js-yaml": "^4.1.0",
    "nock": "^14.0.1",
    "prettier": "3.5.3",
